<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/heading_activity"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/minMargin"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title_layout"
        app:cardCornerRadius="@dimen/corner_radius"
        app:cardBackgroundColor="@color/secondBackgroundColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="4">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/user"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/teacherID"
                        android:layout_width="match_parent"
                        android:layout_weight="3"
                        android:layout_height="0dp"
                        android:text="FaPName"
                        android:gravity="start"
                        android:textSize="@dimen/textSize"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/lastName"
                        android:layout_width="match_parent"
                        android:layout_weight="3"
                        android:layout_height="0dp"
                        android:gravity="start"
                        android:text="lastName"
                        android:textStyle="bold"
                        android:textSize="@dimen/headingsSize"/>

                    <TextView
                        android:id="@+id/FaPName"
                        android:layout_width="match_parent"
                        android:layout_weight="3"
                        android:layout_height="0dp"
                        android:text="FaPName"
                        android:gravity="start"
                        android:textSize="@dimen/textSize"/>

                </LinearLayout>

            </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>