<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorMain">

    <LinearLayout
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/elementsPadding"
        android:layout_margin="5dp"
        android:elevation="@dimen/standardElevation"
        android:orientation="vertical"
        android:background="@drawable/button_shape_standard_new">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/startMargin"
                android:src="@android:drawable/sym_contact_card"
                android:contentDescription="@string/todo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:text="FullName"
                android:layout_margin="@dimen/averageMargin"
                android:textSize="@dimen/heddingsSize"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/averageMargin"
            android:gravity="end"
            android:text="@string/studentText"
            android:textSize="@dimen/textSize"
            android:textStyle="italic"/>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/standardElevation"
        android:layout_marginStart="@dimen/startMargin"
        android:layout_marginEnd="@dimen/startMargin"
        android:layout_marginTop="@dimen/startMargin"
        android:layout_below="@id/heading">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape_standard"
            android:padding="@dimen/averagePadding">

            <ImageView
                android:id="@+id/src"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_lock_lock"
                android:layout_alignParentStart="true"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/src"
                android:text="@string/pass_examsText"
                android:textStyle="normal"
                android:textSize="@dimen/textSize"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardContainer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/standardElevation"
        android:layout_marginStart="@dimen/startMargin"
        android:layout_marginEnd="@dimen/startMargin"
        android:layout_marginTop="@dimen/startMargin"
        android:layout_below="@id/cardContainer">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/averagePadding"
            android:background="@drawable/button_shape_standard">

            <ImageView
                android:id="@+id/src1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_lock_lock"
                android:layout_alignParentStart="true"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/descriptionText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/src1"
                android:text="@string/resultCardText"
                android:textStyle="normal"
                android:textSize="@dimen/textSize"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/signoutText"
        android:textSize="@dimen/textSizeMin"
        android:textStyle="bold"
        android:background="@color/colorOpacue"/>

</RelativeLayout>