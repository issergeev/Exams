<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--android:background="@drawable/background">-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="405dp">

            <LinearLayout
                android:id="@+id/titleLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/minMargin">

                <ImageView
                    android:layout_marginTop="45dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/user_icon"/>

                <TextView
                    android:id="@+id/fullName"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textStyle="bold"
                    android:textColor="@android:color/secondary_text_light"
                    android:textSize="21sp"/>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="@dimen/averagePadding"
                android:layout_marginStart="@dimen/cardviewMargin"
                android:layout_marginEnd="@dimen/cardviewMargin"
                android:layout_marginBottom="@dimen/bottomMargin"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/titleLayout"
                app:cardCornerRadius="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/cardviewMargin"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Exams available"
                            android:textColor="@android:color/secondary_text_light"
                            android:textSize="20sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:paddingTop="10dp"
                            android:textColor="@color/textColor"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/cardviewMargin"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Exams passed"
                            android:textColor="@android:color/secondary_text_light"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="0"
                            android:textColor="@color/textColor"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cardContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/standardElevation"
            android:layout_marginStart="@dimen/startMargin"
            android:layout_marginEnd="@dimen/startMargin"
            android:layout_marginTop="@dimen/startMargin"
            android:layout_below="@id/heading"
            app:cardCornerRadius="5dp"
            style="@style/CardView.Dark">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/averagePadding">

                <ImageView
                    android:id="@+id/src"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pass_icon"
                    android:layout_alignParentStart="true"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:id="@+id/descriptionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/src"
                    android:text="@string/pass_examsText"
                    android:textStyle="normal"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textSize"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardContainer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardContainer"
            android:elevation="@dimen/standardElevation"
            android:layout_margin="@dimen/startMargin"
            app:cardCornerRadius="5dp"
            style="@style/CardView.Dark">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/averagePadding">

                <ImageView
                    android:id="@+id/src1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/results_icon"
                    android:layout_alignParentStart="true"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:id="@+id/descriptionText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/src1"
                    android:text="@string/resultCardText"
                    android:textStyle="normal"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textSize"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/topMargin"
        app:fabSize="normal"
        android:src="@android:drawable/ic_delete"
        app:backgroundTint="@color/colorLightRed"/>

</RelativeLayout>